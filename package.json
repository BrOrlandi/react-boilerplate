{
  "name": "react-hot-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "eslint src",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack -p --config webpack.config.production.js",
    "postbuild": "copyfiles index.html dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BrOrlandi/react-hot-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack"
  ],
  "author": "Bruno Orlandi <brorlandi@gmail.com> (http://github.com/BrOrlandi)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BrOrlandi/react-hot-boilerplate/issues"
  },
  "homepage": "https://github.com/BrOrlandi/react-hot-boilerplate",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^3.1.4",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.0",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
